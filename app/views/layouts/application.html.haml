%html
  %head

    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }


    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MapboxApp
    = csrf_meta_tags
    = csp_meta_tag
